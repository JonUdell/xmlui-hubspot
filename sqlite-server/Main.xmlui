<VStack>
<TextBox id="newTitle" placeholder="Enter a book title" width="80%" />
<TextBox id="newAuthor" placeholder="Enter the author" width="80%" />
<Button label="Add book">
    <event name="click">
        <APICall
            method="POST"
            url="http://hn.jonudell.info:8080/query"
            rawBody=` { sql2( newTitle.value, newAuthor.value ) } `
        />
    </event>
</Button>
</VStack>

</CHStack>

