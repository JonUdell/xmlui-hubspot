<CHStack>
  <DataSource id="books" url="http://hn.jonudell.info:8080/query" body='{{"sql":"SELECT * FROM books"}}' method="POST"/>
  <List data="{books}" width="30%">
    <Card title="{$item.title}" subtitle="{$item.author}" />
  </List>

  
